#box
	{
		background-color: gray;
		padding: 10px;
		border: 5px solid black;
		width: 300px;
		height: 50px;
		margin-top: 50px;
	}
	
/*For Desktop Layout*/
@media (min-width: 992px)
{
	h1
	{
		text-align: center;
		color: green;
	}
}

/*For Tablet Layout*/
@media (min-width: 768px) & (max-width: 991)
{
	h1
	{
		text-align: center;
		color: green;
	}
}

/For Mobile Layout*/
@media (max-width: 767px)
{
	h1
	{
		text-align: center;
		color: green;
	}
	
}
